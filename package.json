{
  "repository": "git@github.com:galaniprojects/ctypehub.com.git",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">= v18.16.0"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.ts*\" \"src/**/*.css*\"",
    "lint": "yarn run lint-css --formatter github && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint --max-warnings 0 --fix \"src/**/*.css\"",
    "css": "tcm --namedExports --pattern 'src/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "test": "tsc --noEmit",
    "dev": "astro dev",
    "start-db": "docker run -d --rm --name postgres -e POSTGRES_PASSWORD=postgres -p 5432:5432 postgres",
    "kill-db": "docker rm -f postgres",
    "migrate": "sequelize-cli db:migrate",
    "build": "astro build",
    "start": "yarn migrate && node --enable-source-maps dist/server/entry.mjs"
  },
  "dependencies": {
    "@astrojs/node": "^5.1.1",
    "@astrojs/react": "^2.1.1",
    "@kiltprotocol/sdk-js": "^0.32.0",
    "astro": "^2.3.1",
    "http-status-codes": "^2.2.0",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "pino": "^8.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sequelize": "^6.31.0",
    "sequelize-cli": "^6.6.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-astro": "^0.26.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.8.0",
    "stylelint": "^15.6.0",
    "stylelint-config-css-modules": "^4.2.0",
    "stylelint-config-standard": "^33.0.0",
    "ts-jest": "^29.1.0",
    "typed-css-modules": "^0.7.2",
    "typescript": "^5.0.4"
  }
}
