{
  "repository": "git@github.com:galaniprojects/ctypehub.git",
  "license": "BSD-4-Clause",
  "type": "module",
  "engines": {
    "node": ">= 18.18.2"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.astro\" \"src/**/*.ts*\" \"src/**/*.css*\"",
    "lint": "pnpm lint-css --formatter github && pnpm lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.astro\" \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint-css": "stylelint --max-warnings 0 \"src/**/*.astro\" \"src/**/*.css\"",
    "test": "tsc --noEmit && astro check && vitest",
    "dev": "astro dev --port 3000",
    "start-db": "docker run -d --rm --name postgres -e POSTGRES_PASSWORD=postgres -p 5432:5432 postgres",
    "stop-db": "docker rm -f postgres",
    "migrate": "sequelize-cli db:migrate",
    "seed": "sequelize-cli db:seed:all || exit 0",
    "build": "export $(cat .env.example) && astro build",
    "start": "pnpm migrate && pnpm seed && node --enable-source-maps dist/server/entry.mjs"
  },
  "dependencies": {
    "@astrojs/node": "^6.0.3",
    "@astrojs/react": "^3.0.3",
    "@kiltprotocol/sdk-js": "^0.34.0",
    "@polkadot/extension-dapp": "^0.46.5",
    "astro": "^3.3.2",
    "got": "^12.6.1",
    "http-status-codes": "^2.3.0",
    "lodash-es": "^4.17.21",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino": "^8.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sequelize": "^6.33.0",
    "sequelize-cli": "^6.6.1",
    "sharp": "^0.32.6",
    "slash": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@astrojs/check": "^0.2.1",
    "@testcontainers/postgresql": "^10.2.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/lodash-es": "^4.17.10",
    "@types/node": "^18.18.6",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest": "^0.3.3",
    "jest-serializer-vue": "^3.1.0",
    "jsdom": "^22.1.0",
    "pino-pretty": "^10.2.3",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "stylelint": "^15.10.3",
    "stylelint-config-css-modules": "^4.3.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "testcontainers": "^10.2.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "vitest-github-actions-reporter": "^0.10.0"
  }
}
