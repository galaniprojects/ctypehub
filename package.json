{
  "repository": "git@github.com:galaniprojects/kilt-registry.git",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">= v18.16.0"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.ts*\" \"src/**/*.css*\"",
    "lint": "yarn run lint-css --formatter github && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint --max-warnings 0 --fix \"src/**/*.css\"",
    "css": "tcm --namedExports --pattern 'src/frontend/**/*.module.css' && eslint --fix --config ./.eslintrc.json \"src/**/*.css.d.ts\"",
    "test": "tsc --noEmit",
    "dev": "yarn parcel watch",
    "build": "rm -rf dist && yarn parcel build",
    "start": "node --enable-source-maps dist/backend/server.js",
    "dev-start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && supervisor --watch dist/backend/ --enable-source-maps dist/backend/server.js"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.1",
    "@hapi/inert": "^7.1.0",
    "@kiltprotocol/sdk-js": "^0.32.0",
    "dotenv": "^16.0.3",
    "exiting": "^6.1.0",
    "hapi-dev-errors": "^4.0.0",
    "hapi-pino": "^12.0.0",
    "http-status-codes": "^2.2.0",
    "pino": "^8.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/hapi__hapi": "^20.0.13",
    "@types/hapi__inert": "^5.2.6",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "parcel": "~2.7.0",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.7",
    "stylelint": "^15.5.0",
    "stylelint-config-css-modules": "^4.2.0",
    "stylelint-config-standard": "^33.0.0",
    "supervisor": "^0.12.0",
    "ts-jest": "^29.1.0",
    "typed-css-modules": "^0.7.2",
    "typescript": "^5.0.4"
  },
  "targets": {
    "frontend": {
      "context": "browser",
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      },
      "source": "src/frontend/index.html",
      "distDir": "dist/frontend"
    },
    "backend": {
      "context": "node",
      "source": "src/backend/server.ts",
      "distDir": "dist/backend",
      "outputFormat": "esmodule"
    }
  }
}
