{
  "repository": "git@github.com:galaniprojects/ctypehub.com.git",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">= v18.16.1"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.astro\" \"src/**/*.ts*\" \"src/**/*.css*\"",
    "lint": "yarn run lint-css --formatter github && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.astro\" \"src/**/*.ts*\"",
    "lint-css": "stylelint --max-warnings 0 --fix \"src/**/*.astro\" \"src/**/*.css\"",
    "test": "tsc --noEmit && astro check && jest --maxWorkers=1",
    "dev": "astro dev",
    "start-db": "docker run -d --rm --name postgres -e POSTGRES_PASSWORD=postgres -p 5432:5432 postgres",
    "kill-db": "docker rm -f postgres",
    "migrate": "sequelize-cli db:migrate",
    "build": "export $(cat .env.example) && astro build",
    "start": "yarn migrate && node --enable-source-maps dist/server/entry.mjs"
  },
  "dependencies": {
    "@astrojs/node": "^5.2.0",
    "@astrojs/react": "^2.2.1",
    "@kiltprotocol/sdk-js": "^0.33.1",
    "astro": "^2.6.6",
    "got": "^12.6.1",
    "http-status-codes": "^2.2.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "pino": "^8.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.1",
    "slash": "^4.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.18",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "buffer": "^6.0.3",
    "cbor-web": "^9.0.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-astro": "^0.27.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "pino-pretty": "^10.0.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.10.0",
    "stylelint": "^15.9.0",
    "stylelint-config-css-modules": "^4.2.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^33.0.0",
    "testcontainers": "^9.9.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  }
}
