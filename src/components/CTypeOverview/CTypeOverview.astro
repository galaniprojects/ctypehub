---
import type { CTypeData } from '../../models/ctype';

import containerStyles from '../Container.module.css';

import { generatePath, paths } from '../../paths';

interface Props {
  cTypeData: CTypeData;
}

const { title, id, attestationsCount } = Astro.props.cTypeData;
---

<li class={containerStyles.container}>
  <h2>
    <a href={generatePath(paths.ctypeDetails, id)}>
      {title}
    </a>
  </h2>
  <p>
    <span>Number of Attestations</span>
    <span>{attestationsCount}</span>
  </p>
</li>

<style>
  h2 {
    margin-block-start: 0;
    overflow-wrap: break-word;
    font-size: 1rem;
  }

  a {
    color: var(--color-link);
  }

  p {
    margin-block-end: 0;
    display: flex;
    justify-content: space-between;
    font-size: 0.875rem;
    color: var(--color-text-primary);
  }
</style>
