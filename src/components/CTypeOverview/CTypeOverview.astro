---
import type { CTypeData } from '../../models/ctype';

import containerStyles from '../Container.module.css';

import { generatePath, paths } from '../../paths';

interface Props {
  cTypeData: CTypeData;
}

const { title, id } = Astro.props.cTypeData;
---

<li class={containerStyles.container}>
  <h2 class="title">
    <a class="link" href={generatePath(paths.ctypeDetails, id)}>
      {title}
    </a>
  </h2>
</li>

<style>
  .title {
    overflow-wrap: break-word;
    font-size: 1rem;
  }

  .link {
    color: var(--color-link);
  }
</style>
