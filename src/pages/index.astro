---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header/Header.astro';
import CTypeResultCard from '../components/CTypeResultCard/CTypeResultCard.astro';

import { CType } from '../models/ctype';

const cTypes = await CType.findAll({ offset: 0, limit: 20 });
---

<Layout>
  <Header />

  <ul>
    {cTypes.map(({ dataValues }) => <CTypeResultCard cTypeData={dataValues} />)}
  </ul>
</Layout>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
