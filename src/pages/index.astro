---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header/Header.astro';

import { CType } from '../models/ctype';
import { CTypeOverview } from '../components/CTypeOverview/CTypeOverview';

const cTypes = await CType.findAll({
  offset: 0,
  limit: 20,
  order: [['createdAt', 'DESC']],
});
---

<Layout>
  <Header />

  <ul>
    {cTypes.map(({ dataValues }) => <CTypeOverview cTypeData={dataValues} />)}
  </ul>
</Layout>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
