---
import { NotFoundResponse } from '../../utilities/NotFoundResponse';

import { configuration } from '../../utilities/configuration';
import CTypeDetails from '../../components/CTypeDetails/CTypeDetails.astro';
import { mockCTypes } from '../../utilities/mockCTypes';

const { isProduction } = configuration;

const cType = mockCTypes[Astro.params.id || ''];

if (!cType || isProduction) {
  return new NotFoundResponse();
}
---

<CTypeDetails cTypeData={cType} />
